<?php
{% for table in db.tables %}
Route::group(['prefix' => '{{ table.name | camel }}'], function()
{
  Route::get('/', '{{ table.name | camel }}Controller@index');
  Route::get('/create', '{{ table.name | camel }}Controller@create');
  Route::post('/store', '{{ table.name | camel }}Controller@store');
  Route::get('/edit/{id}', '{{ table.name | camel }}Controller@edit');
  Route::post('/update/{id}', '{{ table.name | camel }}Controller@update');
  Route::post('/destroy/{id}', '{{ table.name | camel }}Controller@destroy');
});
{% endfor %}
